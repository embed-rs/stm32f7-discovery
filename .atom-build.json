{
    "cmd": "xargo",
    "name": "xargo build",
    "args": ["build"],
    "sh": true,
    "cwd": "{PROJECT_PATH}",
    "errorMatch": ["error(\\[[^\\]]*\\])?: (?<message>[^\n]*)\n +--> (?<file>.+\\.rs):(?<line>\\d+):(?<col>\\d+)"],
    "warningMatch": ["warning(\\[[^\\]]*\\])?: (?<message>[^\n]*)\n +--> (?<file>.+\\.rs):(?<line>\\d+):(?<col>\\d+)"],
    "targets": {
        "check-stage1 with debug output": {
            "cmd": "make",
            "args": ["check-stage1"],
            "sh": true,
            "cwd": "{PROJECT_PATH}",
            "env": {"RUST_BACKTRACE": "1", "RUST_LOG": "rustc_mir=debug"},
            "errorMatch": ["(?<file>.+.rs):(?<line>\\d+):(?<col>\\d+):"]
        }
    }
}
